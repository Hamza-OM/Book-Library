@model IEnumerable<LibraryManagementSystem.Models.Genre>

@{
    ViewBag.Title = "Genres";
}

<h2>Genres</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        @TempData["ErrorMessage"]
    </div>
}

<p>
    @Html.ActionLink("Create New", "Create", "Genre", null, new { @class = "btn btn-success" })
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Genre Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.GenreName</td>
                    <td>@item.Description</td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            @Html.ActionLink("Edit", "Edit", "Genre", new { id = item.GenreID }, new { @class = "btn btn-default" })
                            @Html.ActionLink("Details", "Details", "Genre", new { id = item.GenreID }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Delete", "Delete", "Genre", new { id = item.GenreID }, new { @class = "btn btn-danger" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    $(document).ready(function () {
        // Auto-close alerts after 5 seconds
        setTimeout(function() {
            $(".alert").fadeOut("slow");
        }, 5000);
    });
</script> 