@model LibraryManagementSystem.Models.Genre

@{
    ViewBag.Title = "Genre Details";
}

<h2>Genre Details</h2>

<div class="card">
    <div class="card-header">
        <h4>@Model.GenreName</h4>
    </div>
    <div class="card-body">
        <dl class="dl-horizontal">
            <dt>Genre Name</dt>
            <dd>@Model.GenreName</dd>

            <dt>Description</dt>
            <dd>@Model.Description</dd>
        </dl>
    </div>
    <div class="card-footer">
        <div class="btn-group">
            @Html.ActionLink("Edit", "Edit", "Genre", new { id = Model.GenreID }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Back to List", "Index", "Genre", null, new { @class = "btn btn-default" })
        </div>
    </div>
</div> 