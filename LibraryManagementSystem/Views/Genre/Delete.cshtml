@model LibraryManagementSystem.Models.Genre

@{
    ViewBag.Title = "Delete Genre";
}

<h2>Delete Genre</h2>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this genre?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-header">
        <h4>Genre Details</h4>
    </div>
    <div class="card-body">
        <dl class="dl-horizontal">
            <dt>Genre Name</dt>
            <dd>@Model.GenreName</dd>

            <dt>Description</dt>
            <dd>@Model.Description</dd>
        </dl>
    </div>
    <div class="card-footer">
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.GenreID)

            <div class="form-actions">
                <button type="submit" class="btn btn-danger">Delete</button>
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
            </div>
        }
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    $(document).ready(function() {
        $('form').on('submit', function() {
            $(this).find('button[type="submit"]').prop('disabled', true).text('Deleting...');
        });
    });
</script> 